            <div class="form-group">
                <label asp-for="PackingMaterial.MaterialWeigth" class="control-label"></label>
                <input asp-for="PackingMaterial.MaterialWeigth" class="form-control" />
                <span asp-validation-for="PackingMaterial.MaterialWeigth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
