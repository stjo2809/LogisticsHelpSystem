@page
@model OrderLogisticsManagerApplication.Pages.Workshop.Deliveries.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Delivery[0].DeliveryAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delivery[0].DeliveryTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Delivery) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryTime)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DeliveryID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DeliveryID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DeliveryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
